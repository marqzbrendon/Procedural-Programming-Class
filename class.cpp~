#include <iostream>
using namespace std;


void update(int array[], int row, int column, int newValue)
{
   array[ column + (row * 20)] = newValue;

   cout << newValue << endl;
}


/**********************************************************************
 * Add text here to describe what the function "main" does. Also don't forget
 * to fill this out with meaningful text or YOU WILL LOSE POINTS.
 ***********************************************************************/
int main()
{
   cout << "Row: ";
   int row;
   cin >> row;

   cout << "Column: ";
   int column;
   cin >> column;

   cout << "New value: ";
   int newValue;
   cin >> newValue;
   
   int array[100];

   update(array, row, column, newValue);   
   
   return 0;
}
